<section>
	<div class="clearfix"></div>
	<div class="game-board">
		<% @game_tiles.each do |game_tile| %>
			<% if game_tile.first_of_row? && game_tile.row != 0 %>
				<div class="clearfix"></div>
			<% end %>
			<%= render game_tile %>
		<% end %>
	</div>
<section>
