
<%= turbo_stream_from @game_board %>

<section class="view-window">
<section class='sidebar w-60 h-full shadow-md bg-white px-1 absolute shrink-0 z-50'>
<div class="w-60 h-full shadow-md bg-white absolute" id="sidenavSecExample">
  <div class="pt-4 pb-2 px-6">
    <a href="#!">
      <div class="flex items-center">
        <div class="shrink-0 rounded-full w-10">
					<img src="<%= asset_path(@avatar.representation_image) %>"/>
        </div>
        <div class="grow ml-3">
          <p class="text-sm font-semibold text-blue-600"><%= @player.name %></p>
        </div>
      </div>
    </a>
  </div>
	<div class="flex space-x-2 justify-center">
		<%= button_to "Configure", edit_configuration_path(@player.id), method: :get, class: "mt-6 inline-block px-6 py-2.5 bg-blue-600 text-white font-medium text-xs leading-tight uppercase rounded shadow-md hover:bg-blue-700 hover:shadow-lg focus:bg-blue-700 focus:shadow-lg focus:outline-none focus:ring-0 active:bg-blue-800 active:shadow-lg transition duration-150 ease-in-out" %>
	</div>

	<%= turbo_frame_tag "keybindings" do %>
		<div class='flex justify-center mt-6'>
			<%= button_to player_movement_intents_path(@avatar, movement: :up), method: :post,
					data: { controller: "game", hotkey: 'k' } do %>
				<svg aria-hidden="true" focusable="false" data-prefix="far" data-icon="arrow-alt-circle-up" class="w-7 h-7" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
					<path fill="currentColor" d="M256 504c137 0 248-111 248-248S393 8 256 8 8 119 8 256s111 248 248 248zm0-448c110.5 0 200 89.5 200 200s-89.5 200-200 200S56 366.5 56 256 145.5 56 256 56zm20 328h-40c-6.6 0-12-5.4-12-12V256h-67c-10.7 0-16-12.9-8.5-20.5l99-99c4.7-4.7 12.3-4.7 17 0l99 99c7.6 7.6 2.2 20.5-8.5 20.5h-67v116c0 6.6-5.4 12-12 12z"></path>
				</svg>
				<span>k</span>
			<% end %>
			<%= button_to player_movement_intents_path(@avatar, movement: :right), method: :post, data: { hotkey: 'l' } do %>
				<svg aria-hidden="true" focusable="false" data-prefix="far" data-icon="arrow-alt-circle-right" class="w-7 h-7" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
					<path fill="currentColor" d="M504 256C504 119 393 8 256 8S8 119 8 256s111 248 248 248 248-111 248-248zm-448 0c0-110.5 89.5-200 200-200s200 89.5 200 200-89.5 200-200 200S56 366.5 56 256zm72 20v-40c0-6.6 5.4-12 12-12h116v-67c0-10.7 12.9-16 20.5-8.5l99 99c4.7 4.7 4.7 12.3 0 17l-99 99c-7.6 7.6-20.5 2.2-20.5-8.5v-67H140c-6.6 0-12-5.4-12-12z"></path>
				</svg>
				<span>l</span>
			<% end %>
			<%= button_to player_movement_intents_path(@avatar, movement: :down), method: :post, data: { hotkey: 'j' } do %>
				<svg aria-hidden="true" focusable="false" data-prefix="far" data-icon="arrow-alt-circle-down" class="w-7 h-7" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
					<path fill="currentColor" d="M256 8C119 8 8 119 8 256s111 248 248 248 248-111 248-248S393 8 256 8zm0 448c-110.5 0-200-89.5-200-200S145.5 56 256 56s200 89.5 200 200-89.5 200-200 200zm-32-316v116h-67c-10.7 0-16 12.9-8.5 20.5l99 99c4.7 4.7 12.3 4.7 17 0l99-99c7.6-7.6 2.2-20.5-8.5-20.5h-67V140c0-6.6-5.4-12-12-12h-40c-6.6 0-12 5.4-12 12z"></path>
				</svg>
				<span>j</span>
			<% end %>
			<%= button_to player_movement_intents_path(@avatar, movement: :left), method: :post, data: { hotkey: 'h'} do %>
				<svg aria-hidden="true" focusable="false" data-prefix="far" data-icon="arrow-alt-circle-left" class="w-7 h-7" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
					<path fill="currentColor" d="M8 256c0 137 111 248 248 248s248-111 248-248S393 8 256 8 8 119 8 256zm448 0c0 110.5-89.5 200-200 200S56 366.5 56 256 145.5 56 256 56s200 89.5 200 200zm-72-20v40c0 6.6-5.4 12-12 12H256v67c0 10.7-12.9 16-20.5 8.5l-99-99c-4.7-4.7-4.7-12.3 0-17l99-99c7.6-7.6 20.5-2.2 20.5 8.5v67h116c6.6 0 12 5.4 12 12z"></path>
				</svg>
				<span>h</span>
			<% end %>
			<%= button_to player_movement_intents_path(@avatar, movement: :face_left), method: :post, data: { hotkey: 'a' } do %>
				<svg aria-hidden="true" focusable="false" data-prefix="far" data-icon="arrow-alt-circle-left" class="w-7 h-7" style="transform: rotate(45deg)" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
					<path fill="currentColor" d="M8 256c0 137 111 248 248 248s248-111 248-248S393 8 256 8 8 119 8 256zm448 0c0 110.5-89.5 200-200 200S56 366.5 56 256 145.5 56 256 56s200 89.5 200 200zm-72-20v40c0 6.6-5.4 12-12 12H256v67c0 10.7-12.9 16-20.5 8.5l-99-99c-4.7-4.7-4.7-12.3 0-17l99-99c7.6-7.6 20.5-2.2 20.5 8.5v67h116c6.6 0 12 5.4 12 12z"></path>
				</svg>
				<span>a</span>
			<% end %>
			<%= button_to player_movement_intents_path(@avatar, movement: :face_right), method: :post, data: { hotkey: 'f' } do %>
				<svg aria-hidden="true" focusable="false" data-prefix="far" data-icon="arrow-alt-circle-up" class="w-7 h-7" style="transform: rotate(45deg)" role="img" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 512 512">
					<path fill="currentColor" d="M256 504c137 0 248-111 248-248S393 8 256 8 8 119 8 256s111 248 248 248zm0-448c110.5 0 200 89.5 200 200s-89.5 200-200 200S56 366.5 56 256 145.5 56 256 56zm20 328h-40c-6.6 0-12-5.4-12-12V256h-67c-10.7 0-16-12.9-8.5-20.5l99-99c4.7-4.7 12.3-4.7 17 0l99 99c7.6 7.6 2.2 20.5-8.5 20.5h-67v116c0 6.6-5.4 12-12 12z"></path>
				</svg>
				<span>f</span>
			<% end %>
			<%= button_to player_action_intents_path(@avatar, player_action: :delete), method: :post, data: { hotkey: 'd' } do %>
			<% end %>
		</div>
	<% end %>
	<ul class="relative scores mt-6">
	  <%= turbo_frame_tag 'scores' do %>
		  <p>SCORES:</p>
			<p>---------</p>
			<% @high_scores.each do |high_score| %>
				<%= render high_score %>
			<% end %>
		<% end %>
	</ul>
</section>

<div class="clearfix"></div>
	<%= render @game_board, game_tiles: @game_tiles%>
<section>
