
.game-piece-person {
  padding-top: 30%;
  padding-left: 25%;
  width: 100%;
  height: 100%;
  position: relative;
  z-index: 20;
}

.game-piece-person.ninja {
  background-image: url(<%= asset_path('nicubunu_Game_baddie_Ninja.svg') %>);
}

.game-piece-person.facing-left .sprite {
  transform: scaleX(calc(-1 * var(--scale))) scaleY(var(--scale)); /* Corrected */
}

.scores {
  font-family: 'Courier';
  font-weight: bold;
}

.sprite-small {
  scale: 0.5;
  margin-left: -25px;
}

.sprite {
  width: 80px; /* Frame width based on character offsets */
  height: 80px; /* Height of the sprite sheet */

  background-size: 775px 80px; /* Set the total sprite sheet size */
  background-repeat: no-repeat;

  animation: walk-cycle 0.75s steps(4) infinite; /* 5 frames */
  transform: scale(var(--scale)); /* Example: 2x scaling (you can adjust this value) */
}

@keyframes walk-cycle {
  from {
    background-position: -32px 0; /* Start at the first character (78px from the left) */
  }
  to {
    background-position: calc(-32px - (155px * 4)) 0; /* Start at the first character (78px from the left) */
  }
}

.terrain-element-sign {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%); /* Centers the element */
  z-index: 10; /* Lower z-index to be behind the game piece */

  font-size: 1.5em;
  font-weight: bold;
  color: #000;
}