<% base_size=100 %>

.game-piece-person {
  padding-top: <%=(0.15 * base_size).floor%>px;
  width: 100%;
  height: 100%;
  position: relative;
  z-index: 20;
}

.game-piece-person.ninja {
  background-image: url(<%= asset_path('nicubunu_Game_baddie_Ninja.svg') %>);
}

.game-piece-person.facing-left img {
  transform: scaleX(-1)
}

.scores {
  font-family: 'Courier';
  font-weight: bold;
}

.terrain-element-sign {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%); /* Centers the element */
  z-index: 10; /* Lower z-index to be behind the game piece */

  font-size: 1.5em;
  font-weight: bold;
  color: #000;
}