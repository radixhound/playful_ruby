.hex-tile::before, .square-tile::before {
  content: "";
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-size: cover;
  z-index: 1; /* Ensure it is below the game piece */
  opacity: 0.6;
}

.bg-default {
  background-color: #777;
}

.bg-grass::before {
  background-image: url(<%= asset_path('grass.jpg') %>);
}

.bg-rocks::before {
  background-image: url(<%= asset_path('rocky.jpg') %>);
}

.bg-dirt::before {
  background-image: url(<%= asset_path('dirt.jpg') %>);
}

.bg-water::before {
  background-image: url(<%= asset_path('water.jpg') %>);
  opacity: 0.8;
}

.bg-nothing {
  background-image: none;
  background-color: #eee;
}

.r-0::before {
  background-position: center;
}
.r-1::before {
  background-position: bottom left;
}
.r-2::before {
  background-position: bottom right;
}
.r-3::before {
  background-position: top right;
}
.r-4::before {
  background-position: top left;
}
.r-5::before {
  background-position: top center;
}