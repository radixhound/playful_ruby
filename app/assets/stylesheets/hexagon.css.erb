/* Game Board */
<% base_size = 100 %>
<% short_side = base_size / Math.sqrt(3) %>
<% offset_height = Math.sqrt((short_side ** 2) - (base_size ** 2) / 4 ).floor %>
<% board_height = (GameTile::MAX_ROW + 2) * (short_side + offset_height).floor %>
<% board_width = (GameTile::MAX_COLUMN + 1) * base_size %>

.view-window {
    position: relative;
    overflow: hidden;
    width: <%= board_width + 250%>px; /* the width of the board plus the sidebar */
    height: <%= board_height %>px;
}

.game-board {
    position: absolute;
    text-align: center;
    top: -<%= offset_height %>px;
    left: 225px;
    width: 10000px;
    height: 10000px;
    background: #000;
}

.game-tile {
    float: left;
    margin-top: -<%= offset_height %>px;
}

.game-tile .game-info {
    display: block;
    position: relative;
    top: -999px;
}

.game-board .game-tile.first-row {
    margin-top: 0;
}

.game-board .offset-first {
    margin-left: <%= (0.5 * base_size).floor %>px;
}


.game-tile .inner-hex {
    width: <%= base_size %>px;
    height: <%= (short_side * 2).floor %>px;
}

/* Hexagon */
.hive {
    position: relative;
}

.outer-hex {
    position: relative;
    margin: 0 auto;
}

.hex {
    overflow: hidden;
    visibility: hidden;
    -webkit-transform: rotate(120deg);
    -moz-transform: rotate(120deg);
    -o-transform: rotate(120deg);
    -ms-transform: rotate(120deg);
    transform: rotate(120deg);
}

.hex-in1,
.hex-in2,
.hex-area {
    width: 100%;
    height: 100%;
    -webkit-transform: rotate(-60deg);
    -moz-transform: rotate(-60deg);
    -o-transform: rotate(-60deg);
    -ms-transform: rotate(-60deg);
    transform: rotate(-60deg);
}

.hex-in1 {
    overflow: hidden;
}

.hex-in2 {
    visibility: visible;
}

.inner-hex {
    position: relative;
    margin: 0 auto;
    top: 14px;
    height: 196px;
    width: 168px;
}

/* clearfix */
.clearfix:after {
    content: " ";
    display: block;
    height: 0;
    clear: both;
    visibility: hidden;
}

.clearfix {
    display: inline-block;
}

/* Hide from IE Mac \*/
.clearfix {
    display: block;
}

/* End hide from IE Mac */
.none {
    display: none;
}

.clear {
    clear: both;
    padding-bottom: 20px;
}

/* End Clearfix */